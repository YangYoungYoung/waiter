  /* margin-bottom: 10rpx; */
}

.item-size {
  font-size: 28rpx;
  height: 70rpx;
  text-align: center;
  padding-left: 32rpx;
  padding-right: 32rpx;
  color: #6e5962;
  line-height: 70rpx;
}

.item-size-select {
  font-size: 28rpx;
  height: 70rpx;
  text-align: center;
  padding-left: 32rpx;
  padding-right: 32rpx;
  color: #fff;
  line-height: 70rpx;
  background-color: #9cd461;
  border-radius: 6rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background-color: #000;
  box-sizing: border-box;
  display: block;
  flex-direction: row;
}

.table-view {
  width: 658rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.table-item-free {
  margin-top: 30rpx;
  width: 300rpx;
  height: 200rpx;
  background-color: #afd08b;
  border-radius: 10rpx;
  border: solid 1rpx #afd08b;
  display: flex;
  flex-direction: column;
