.table-name {
  font-size: 32rpx;
  color: #333;
  margin-top: 56rpx;
  box-sizing: border-box;
}

.table-bottom {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  justify-content: space-between;
}

.bottome-textP {
  font-size: 28rpx;
  color: #666;
}

.radio-view {
  width: 678rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}

.radio {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  align-items: center;
  text-align: center;
}

radio .wx-radio-input {
  /*未选中状态*/
  border-radius: 50%;
  height: 25rpx;
  width: 25rpx;
  /* margin-top: -4rpx; */
  line-height: 25rpx;
  margin-left: 10rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
  border-radius: 50%;
  height: 32rpx;
  width: 32rpx;
  line-height: 32rpx;
  /* margin-top: -4rpx; */
  border: none;
  background: #0958db;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 32rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 32rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 32rpx;
  text-align: center;
  font-size: 24rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #0958db;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.area-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

/* 弹窗 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 640rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 60rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 40rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  text-align: center;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
