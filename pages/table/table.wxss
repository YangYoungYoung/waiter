.radio-view {
  width: 678rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}

.radio {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  align-items: center;
  text-align: center;
}

radio .wx-radio-input {
  /*未选中状态*/
  border-radius: 50%;
  height: 25rpx;
  width: 25rpx;
  /* margin-top: -4rpx; */
  line-height: 25rpx;
  margin-left: 10rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
  border-radius: 50%;
  height: 32rpx;
  width: 32rpx;
  line-height: 32rpx;
  /* margin-top: -4rpx; */
  border: none;
  background: #0958db;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 32rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 32rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 32rpx;
  text-align: center;
  font-size: 24rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #0958db;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.area-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
