}

.table-item-dine {
  margin-top: 30rpx;
  width: 300rpx;
  height: 200rpx;
  background-color: #f7e2ab;
  border-radius: 10rpx;
  border: solid 1rpx #f7e2ab;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.table-item-clean {
  margin-top: 30rpx;
  width: 300rpx;
