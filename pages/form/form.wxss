/* pages/form/form.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scroll {
  padding-bottom: 120rpx;
  width: 100%;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.list-item {
  width: 678rpx;
  height: 167rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}

.item-left {
  display: flex;
  flex-direction: row;
}

.item-img {
  width: 210rpx;
  height: 150rpx;
}

.item-name {
  font-size: 34rpx;
  color: #2b2b2b;
}

.item-right {
  width: 100rpx;
  height: 50rpx;
  border-radius: 8rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #e0dada;
}

.foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #e8ecf1;
}

.foot-left {
  width: 180rpx;
  height: 100rpx;
  background-color: #98dbf9;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  right: 180rpx;
  font-size: 30rpx;
}

.totalPrice {
  font-size: 28rpx;
  color: #333;
  margin-left: 36rpx;
}

.foot-right {
  width: 180rpx;
  height: 100rpx;
  font-size: 30rpx;
  background-color: #fada85;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  right: 0;
}

.name-price {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.item-price {
  font-size: 28rpx;
  color: #e86458;
  margin-top: 50rpx;
}
